@model CloudDevPOE.Models.Cart
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2 class="mb-4">
        <i class="fas fa-shopping-cart"></i> Shopping Cart
    </h2>

    @if (Model == null || !Model.CartItems.Any())
    {
        <div class="alert alert-info">
            <h4>Your cart is empty</h4>
            <p>Start shopping and add items to your cart!</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Browse Products</a>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;">
                                        }
                                        <strong>@item.ProductName</strong>
                                    </div>
                                </td>
                                <td>R @item.Price.ToString("N2")</td>
                                <td>
                                    <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" max="99"
                                               class="form-control form-control-sm" style="width: 80px; display: inline-block;" />
                                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                    </form>
                                </td>
                                <td><strong>R @item.Subtotal.ToString("N2")</strong></td>
                                <td>
                                    <form asp-action="RemoveItem" method="post" class="d-inline"
                                          onsubmit="return confirm('Remove this item from cart?');">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light">
                            <td colspan="3" class="text-end"><strong>Total Items:</strong></td>
                            <td colspan="2"><strong>@Model.TotalItems</strong></td>
                        </tr>
                        <tr class="table-success">
                            <td colspan="3" class="text-end"><h5>Total Amount:</h5></td>
                            <td colspan="2"><h5><strong>R @Model.TotalAmount.ToString("N2")</strong></h5></td>
                        </tr>
                    </tfoot>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <div>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Continue Shopping
                        </a>
                        <form asp-action="Clear" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to clear your cart?');">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-trash-alt"></i> Clear Cart
                            </button>
                        </form>
                    </div>
                    <div>
                        <a asp-action="Checkout" class="btn btn-success btn-lg">
                            <i class="fas fa-credit-card"></i> Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
