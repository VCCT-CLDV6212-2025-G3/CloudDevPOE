@model CloudDevPOE.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-box"></i> Product Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.RowKey" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.ProductName" style="width: 100%; max-height: 400px; object-fit: cover;">
        }
        else
        {
            <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 300px;">
                <div class="text-center">
                    <i class="fas fa-image fa-5x text-muted"></i>
                    <p class="mt-3 text-muted">No image available</p>
                </div>
            </div>
        }
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">@Model.ProductName</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Category:</strong>
                    </div>
                    <div class="col-sm-9">
                        <span class="badge bg-primary">@Model.Category</span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Price:</strong>
                    </div>
                    <div class="col-sm-9">
                        <h4 class="text-success">${@Model.Price.ToString("F2")}</h4>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Stock Quantity:</strong>
                    </div>
                    <div class="col-sm-9">
                        <span class="badge @(Model.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                            @Model.StockQuantity units
                        </span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Availability:</strong>
                    </div>
                    <div class="col-sm-9">
                        <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                            @(Model.IsAvailable ? "Available" : "Not Available")
                        </span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Created Date:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.CreatedDate.ToString("MMMM dd, yyyy")
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Description:</strong>
                        </div>
                        <div class="col-sm-9">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-sm-3">
                        <strong>Product ID:</strong>
                    </div>
                    <div class="col-sm-9">
                        <small class="text-muted">@Model.RowKey</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

