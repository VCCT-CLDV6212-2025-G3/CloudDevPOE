@model CloudDevPOE.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-danger"><i class="fas fa-trash"></i> Delete Product</h2>

<div class="alert alert-danger">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Warning!</strong> Are you sure you want to delete this product? This action cannot be undone.
</div>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.ProductName" style="width: 100%; max-height: 300px; object-fit: cover;">
        }
        else
        {
            <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 200px;">
                <div class="text-center">
                    <i class="fas fa-image fa-3x text-muted"></i>
                    <p class="mt-2 text-muted">No image</p>
                </div>
            </div>
        }
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">@Model.ProductName</h4>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-3"><strong>Category:</strong></div>
                    <div class="col-sm-9">@Model.Category</div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3"><strong>Price:</strong></div>
                    <div class="col-sm-9">${@Model.Price.ToString("F2")}</div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3"><strong>Stock:</strong></div>
                    <div class="col-sm-9">@Model.StockQuantity units</div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3"><strong>Status:</strong></div>
                    <div class="col-sm-9">
                        <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                            @(Model.IsAvailable ? "Available" : "Not Available")
                        </span>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="row mb-2">
                        <div class="col-sm-3"><strong>Description:</strong></div>
                        <div class="col-sm-9">@Model.Description</div>
                    </div>
                }

                <div class="row">
                    <div class="col-sm-3"><strong>Created:</strong></div>
                    <div class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="RowKey" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash"></i> Yes, Delete This Product
                </button>
                <a asp-action="Details" asp-route-id="@Model.RowKey" class="btn btn-info btn-lg">
                    <i class="fas fa-eye"></i> View Details
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>
