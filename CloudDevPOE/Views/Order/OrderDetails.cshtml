@model CloudDevPOE.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-receipt"></i> Order Details
        </h2>
        @if (User.IsInRole("Customer"))
        {
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Orders
            </a>
        }
        else
        {
            <a asp-action="AdminDashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        }
    </div>

    <div class="row">
        <!-- Order Information -->
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Order Information</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Number:</strong>
                            <p>@Model.OrderNumber</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Order Date:</strong>
                            <p>@Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            <p>
                                @switch (Model.Status)
                                {
                                    case "PENDING":
                                        <span class="badge bg-warning text-dark fs-6">@Model.Status</span>
                                        break;
                                    case "PROCESSED":
                                        <span class="badge bg-info fs-6">@Model.Status</span>
                                        break;
                                    case "SHIPPED":
                                        <span class="badge bg-primary fs-6">@Model.Status</span>
                                        break;
                                    case "DELIVERED":
                                        <span class="badge bg-success fs-6">@Model.Status</span>
                                        break;
                                    case "CANCELLED":
                                        <span class="badge bg-danger fs-6">@Model.Status</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary fs-6">@Model.Status</span>
                                        break;
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Total Amount:</strong>
                            <p class="text-success"><h5>R @Model.TotalAmount.ToString("N2")</h5></p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Shipping Address:</strong>
                                <p>@Model.ShippingAddress</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Order Notes:</strong>
                                <p>@Model.Notes</p>
                            </div>
                        </div>
                    }

                    @if (Model.ProcessedDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Processed Date:</strong>
                                <p>@Model.ProcessedDate.Value.ToString("MMMM dd, yyyy hh:mm tt")</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Order Items</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>R @item.Price.ToString("N2")</td>
                                    <td>@item.Quantity</td>
                                    <td>R @item.Subtotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-success">
                                <td colspan="3" class="text-end"><h5>Total:</h5></td>
                                <td><h5><strong>R @Model.TotalAmount.ToString("N2")</strong></h5></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="col-md-4">
            @if (User.IsInRole("Customer") && Model.Status == "PENDING")
            {
                <div class="card shadow mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">Order Actions</h5>
                    </div>
                    <div class="card-body">
                        <p>You can cancel this order while it's pending.</p>
                        <form asp-action="CancelOrder" asp-route-id="@Model.OrderId" method="post"
                              onsubmit="return confirm('Are you sure you want to cancel this order?');">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-times-circle"></i> Cancel Order
                            </button>
                        </form>
                    </div>
                </div>
            }

            @if (User.IsInRole("Admin"))
            {
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Admin Actions</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="orderId" value="@Model.OrderId" />
                            <div class="form-group mb-3">
                                <label for="newStatus" class="form-label">Update Status:</label>
                                <select name="newStatus" id="newStatus" class="form-select">
                                    <option value="PENDING" selected="@(Model.Status == "PENDING")">PENDING</option>
                                    <option value="PROCESSED" selected="@(Model.Status == "PROCESSED")">PROCESSED</option>
                                    <option value="SHIPPED" selected="@(Model.Status == "SHIPPED")">SHIPPED</option>
                                    <option value="DELIVERED" selected="@(Model.Status == "DELIVERED")">DELIVERED</option>
                                    <option value="CANCELLED" selected="@(Model.Status == "CANCELLED")">CANCELLED</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-save"></i> Update Status
                            </button>
                        </form>
                    </div>
                </div>
            }

            @if (Model.Customer != null)
            {
                <div class="card shadow mt-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Customer Info</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> @Model.Customer.FirstName @Model.Customer.LastName</p>
                        <p><strong>Email:</strong> @Model.Customer.User?.Email</p>
                        @if (!string.IsNullOrEmpty(Model.Customer.PhoneNumber))
                        {
                            <p><strong>Phone:</strong> @Model.Customer.PhoneNumber</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
