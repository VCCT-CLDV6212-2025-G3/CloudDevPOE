@model CloudDevPOE.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
                    <h1 class="display-4 text-success">Order Placed Successfully!</h1>
                    <p class="lead mt-3">Thank you for your order.</p>

                    <hr class="my-4">

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Order Number</h5>
                            <p class="fs-4"><strong>@Model.OrderNumber</strong></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Order Total</h5>
                            <p class="fs-4 text-success"><strong>R @Model.TotalAmount.ToString("N2")</strong></p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5>Order Status</h5>
                            <p><span class="badge bg-warning text-dark fs-6">@Model.Status</span></p>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>What's Next?</strong><br>
                        We've received your order and will process it shortly.
                        You can track your order status from your orders page.
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-primary btn-lg">
                            <i class="fas fa-eye"></i> View Order Details
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-list"></i> My Orders
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-success btn-lg">
                            <i class="fas fa-shopping-bag"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="card shadow mt-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Order Summary</h4>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>R @item.Subtotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                    {
                        <hr>
                        <div class="mt-3">
                            <strong>Shipping Address:</strong>
                            <p>@Model.ShippingAddress</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

