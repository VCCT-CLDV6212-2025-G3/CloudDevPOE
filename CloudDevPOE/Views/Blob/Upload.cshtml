@{
    ViewData["Title"] = "Upload File";
}

<h2><i class="fas fa-upload"></i> Upload File to Blob Storage</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="file" class="control-label">Select File</label>
                <input type="file" name="file" class="form-control" required />
                <div class="form-text">Maximum file size: 100MB</div>
            </div>

            <div class="mb-3">
                <label for="uploadType" class="control-label">File Type</label>
                <select name="uploadType" class="form-select">
                    <option value="Image">Image</option>
                    <option value="Video">Video</option>
                    <option value="Document">Document</option>
                </select>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-upload"></i> Upload File
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Files
                </a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Upload Guidelines</h5>
            </div>
            <div class="card-body">
                <h6>Supported File Types:</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-image text-primary"></i> <strong>Images:</strong> JPG, PNG, GIF, WebP</li>
                    <li><i class="fas fa-video text-success"></i> <strong>Videos:</strong> MP4, AVI, MOV, WebM</li>
                    <li><i class="fas fa-file-alt text-info"></i> <strong>Documents:</strong> PDF, DOC, DOCX, TXT</li>
                </ul>

                <h6 class="mt-3">File Organization:</h6>
                <ul class="list-unstyled">
                    <li><code>images/</code> - Image files</li>
                    <li><code>videos/</code> - Video files</li>
                    <li><code>documents/</code> - Document files</li>
                </ul>
            </div>
        </div>
    </div>
</div>
