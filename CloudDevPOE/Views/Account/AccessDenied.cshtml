@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body">
                    <i class="fas fa-lock fa-5x text-danger mb-4"></i>
                    <h1 class="display-4 text-danger">Access Denied</h1>
                    <p class="lead mt-3">You do not have permission to access this page.</p>
                    <hr class="my-4">
                    <p>If you believe this is an error, please contact the administrator.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
